---
/**
 * Content Section Component - Dark Theme
 *
 * Displays a prose content section with a heading.
 * Used for "How to Use" and "Understanding Results" sections.
 */

export interface Props {
  /** Section heading */
  title: string;
}

const { title } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-xl md:text-2xl font-display text-[var(--color-cream)] mb-4 break-words">
    {title}
  </h2>
  <div class="space-y-4 text-[var(--color-subtle)] leading-relaxed prose-invert">
    <slot />
  </div>
</section>

<style>
  div :global(p) {
    color: var(--color-subtle);
  }
  div :global(strong) {
    color: var(--color-cream);
    font-weight: 600;
  }
</style>
