---
/**
 * Hero Section Component - Dark Theme
 *
 * Displays the title and description header for calculator pages.
 */

export interface Props {
  /** Main heading (H1) */
  title: string;
  /** Subtitle/description text */
  description: string;
}

const { title, description } = Astro.props;
---

<header class="text-center mb-10">
  <h1 class="text-3xl md:text-4xl lg:text-5xl font-display text-[var(--color-cream)] mb-4">
    {title}
  </h1>
  <p class="text-xl text-[var(--color-subtle)] max-w-2xl mx-auto">
    {description}
  </p>
</header>
