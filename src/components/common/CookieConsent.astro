---
/**
 * Cookie Consent Banner
 *
 * GDPR-compliant cookie consent for EU visitors.
 * Stores preference in localStorage.
 */
---

<div
  id="cookie-consent"
  class="fixed bottom-0 left-0 right-0 z-50 p-4 hidden"
  role="dialog"
  aria-labelledby="cookie-consent-title"
>
  <div class="max-w-4xl mx-auto glass rounded-2xl p-6 border border-white/10 shadow-2xl">
    <div class="flex flex-col md:flex-row items-start md:items-center gap-4">
      <div class="flex-1">
        <h3 id="cookie-consent-title" class="font-display text-[var(--color-cream)] mb-2">
          We use cookies
        </h3>
        <p class="text-sm text-[var(--color-subtle)]">
          We use cookies to analyze traffic and show relevant ads. By clicking "Accept", you consent
          to our use of cookies.
          <a href="/privacy" class="text-[var(--color-accent)] hover:underline">Learn more</a>
        </p>
      </div>
      <div class="flex gap-3 w-full md:w-auto">
        <button
          id="cookie-reject"
          class="flex-1 md:flex-none px-5 py-2.5 rounded-xl text-sm font-medium
                 text-[var(--color-subtle)] bg-white/5 border border-white/10
                 hover:bg-white/10 hover:text-[var(--color-cream)] transition-all"
        >
          Reject
        </button>
        <button
          id="cookie-accept"
          class="flex-1 md:flex-none px-5 py-2.5 rounded-xl text-sm font-medium
                 text-[var(--color-void)] bg-[var(--color-accent)]
                 hover:bg-[var(--color-accent-dim)] transition-all"
        >
          Accept
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  const CONSENT_KEY = 'cookie-consent';
  const banner = document.getElementById('cookie-consent');
  const acceptBtn = document.getElementById('cookie-accept');
  const rejectBtn = document.getElementById('cookie-reject');

  // Check if consent already given
  function checkConsent() {
    const consent = localStorage.getItem(CONSENT_KEY);
    if (!consent) {
      // Show banner after a short delay
      setTimeout(() => {
        banner?.classList.remove('hidden');
      }, 1000);
    }
  }

  // Handle accept
  acceptBtn?.addEventListener('click', () => {
    localStorage.setItem(CONSENT_KEY, 'accepted');
    banner?.classList.add('hidden');
    // Enable analytics/ads if needed
    window.dispatchEvent(new CustomEvent('cookie-consent-accepted'));
  });

  // Handle reject
  rejectBtn?.addEventListener('click', () => {
    localStorage.setItem(CONSENT_KEY, 'rejected');
    banner?.classList.add('hidden');
    // Analytics can still run with anonymized data
  });

  // Check on load
  checkConsent();
</script>
