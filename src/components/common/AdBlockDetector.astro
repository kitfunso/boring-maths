---
/**
 * AdBlock Detector Component
 *
 * Detects ad blockers and shows a polite, dismissible message
 * asking users to support the site by whitelisting.
 */
---

<!-- Modal backdrop -->
<div id="adblock-notice" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4">
  <!-- Backdrop overlay -->
  <div class="absolute inset-0 bg-black/70 backdrop-blur-sm"></div>

  <!-- Modal content -->
  <div
    class="relative bento-card p-6 md:p-8 shadow-2xl border border-amber-500/30 max-w-md w-full text-center"
  >
    <!-- Icon -->
    <div
      class="w-16 h-16 rounded-2xl bg-gradient-to-br from-amber-500 to-orange-500 flex items-center justify-center mx-auto mb-4"
    >
      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
        ></path>
      </svg>
    </div>

    <!-- Title -->
    <h3 class="text-xl font-display text-[var(--color-cream)] mb-2">Support Boring Math</h3>

    <!-- Description -->
    <p class="text-sm text-[var(--color-subtle)] mb-6">
      We keep all our calculators <span class="text-[var(--color-cream)]">100% free</span> by showing
      non-intrusive ads. Please consider whitelisting us in your ad blocker to support our work!
    </p>

    <!-- Buttons -->
    <div class="flex flex-col sm:flex-row gap-3 justify-center">
      <button
        id="adblock-refresh"
        class="px-6 py-3 rounded-xl bg-[var(--color-accent)] text-[var(--color-void)] font-medium hover:bg-[var(--color-accent-dim)] transition-colors"
      >
        I've whitelisted - Refresh
      </button>
      <button
        id="adblock-dismiss"
        class="px-6 py-3 rounded-xl bg-white/5 text-[var(--color-subtle)] hover:bg-white/10 hover:text-[var(--color-cream)] transition-colors"
      >
        Continue without ads
      </button>
    </div>
  </div>
</div>

<script is:inline>
  // Only run in production
  if (window.location.hostname !== 'localhost') {
    // Check if user dismissed the notice recently (within 7 days)
    const dismissed = localStorage.getItem('adblock-notice-dismissed');
    const dismissedTime = dismissed ? parseInt(dismissed, 10) : 0;
    const sevenDays = 7 * 24 * 60 * 60 * 1000;

    if (Date.now() - dismissedTime < sevenDays) {
      // User dismissed recently, don't show
    } else {
      // Detect ad blocker by checking if ad element was blocked
      setTimeout(() => {
        const testAd = document.createElement('div');
        testAd.innerHTML = '&nbsp;';
        testAd.className = 'adsbox ad-unit ad-zone ad-space adsense';
        testAd.style.cssText = 'position:absolute;left:-9999px;width:1px;height:1px;';
        document.body.appendChild(testAd);

        setTimeout(() => {
          const isBlocked =
            testAd.offsetHeight === 0 ||
            testAd.offsetParent === null ||
            getComputedStyle(testAd).display === 'none';

          if (isBlocked) {
            const notice = document.getElementById('adblock-notice');
            if (notice) {
              notice.classList.remove('hidden');
              notice.classList.add('animate-fade-in');
            }
          }

          testAd.remove();
        }, 100);
      }, 2000); // Wait 2 seconds before checking
    }

    // Handle dismiss button - continue without whitelisting
    document.getElementById('adblock-dismiss')?.addEventListener('click', () => {
      localStorage.setItem('adblock-notice-dismissed', Date.now().toString());
      document.getElementById('adblock-notice')?.classList.add('hidden');
    });

    // Handle refresh button - user claims to have whitelisted
    document.getElementById('adblock-refresh')?.addEventListener('click', () => {
      window.location.reload();
    });
  }
</script>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.3s ease-out forwards;
  }
</style>
