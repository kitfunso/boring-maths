---
/**
 * AdBlock Detector Component
 *
 * Detects ad blockers and shows a polite, dismissible message
 * asking users to support the site by whitelisting.
 */
---

<div id="adblock-notice" class="hidden fixed bottom-4 right-4 max-w-sm z-50">
  <div class="bento-card p-4 shadow-lg border border-amber-500/20">
    <div class="flex gap-3">
      <div class="flex-shrink-0">
        <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-amber-500 to-orange-500 flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
        </div>
      </div>
      <div class="flex-1">
        <h3 class="text-sm font-medium text-[var(--color-cream)]">Support Boring Math</h3>
        <p class="text-xs text-[var(--color-subtle)] mt-1">
          We keep our calculators free with ads. Please consider whitelisting us!
        </p>
        <div class="flex gap-2 mt-3">
          <button
            id="adblock-dismiss"
            class="text-xs px-3 py-1.5 rounded-lg bg-white/5 text-[var(--color-subtle)] hover:bg-white/10 transition-colors"
          >
            Maybe later
          </button>
          <button
            id="adblock-refresh"
            class="text-xs px-3 py-1.5 rounded-lg bg-[var(--color-accent)] text-[var(--color-void)] font-medium hover:bg-[var(--color-accent-dim)] transition-colors"
          >
            I've whitelisted
          </button>
        </div>
      </div>
      <button id="adblock-close" class="flex-shrink-0 text-[var(--color-muted)] hover:text-[var(--color-cream)] transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
</div>

<script is:inline>
  // Only run in production
  if (window.location.hostname !== 'localhost') {
    // Check if user dismissed the notice recently (within 7 days)
    const dismissed = localStorage.getItem('adblock-notice-dismissed');
    const dismissedTime = dismissed ? parseInt(dismissed, 10) : 0;
    const sevenDays = 7 * 24 * 60 * 60 * 1000;

    if (Date.now() - dismissedTime < sevenDays) {
      // User dismissed recently, don't show
    } else {
      // Detect ad blocker by checking if ad element was blocked
      setTimeout(() => {
        const testAd = document.createElement('div');
        testAd.innerHTML = '&nbsp;';
        testAd.className = 'adsbox ad-unit ad-zone ad-space adsense';
        testAd.style.cssText = 'position:absolute;left:-9999px;width:1px;height:1px;';
        document.body.appendChild(testAd);

        setTimeout(() => {
          const isBlocked = testAd.offsetHeight === 0 ||
                           testAd.offsetParent === null ||
                           getComputedStyle(testAd).display === 'none';

          if (isBlocked) {
            const notice = document.getElementById('adblock-notice');
            if (notice) {
              notice.classList.remove('hidden');
              notice.classList.add('animate-fade-in');
            }
          }

          testAd.remove();
        }, 100);
      }, 2000); // Wait 2 seconds before checking
    }

    // Handle dismiss button
    document.getElementById('adblock-dismiss')?.addEventListener('click', () => {
      localStorage.setItem('adblock-notice-dismissed', Date.now().toString());
      document.getElementById('adblock-notice')?.classList.add('hidden');
    });

    // Handle close button
    document.getElementById('adblock-close')?.addEventListener('click', () => {
      localStorage.setItem('adblock-notice-dismissed', Date.now().toString());
      document.getElementById('adblock-notice')?.classList.add('hidden');
    });

    // Handle refresh button
    document.getElementById('adblock-refresh')?.addEventListener('click', () => {
      window.location.reload();
    });
  }
</script>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.3s ease-out forwards;
  }
</style>
