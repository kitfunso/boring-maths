---
/**
 * Calculators Index Page
 *
 * Lists all available calculators with descriptions and links.
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import CalculatorCard from '../../components/calculators/shared/CalculatorCard.astro';

const title = 'Free Online Calculators | Boring Math Calculators';
const description = 'Browse our collection of free online calculators for everyday math problems. Calculate freelance rates, wedding costs, savings goals, and more.';
const keywords = 'online calculator, free calculator, math calculator, financial calculator';

// Calculator data - same as homepage for consistency
const calculators = [
  {
    title: 'Freelance Day Rate Calculator',
    description: 'Calculate your ideal freelance day rate compared to a salaried position. Includes tax adjustments, benefits analysis, and real take-home pay comparison.',
    href: '/calculators/freelance-day-rate-calculator',
    icon: 'dollar' as const,
    color: 'blue' as const,
    status: 'live' as const,
  },
  {
    title: 'Wedding Alcohol Estimator',
    description: "Estimate how much beer, wine, and liquor you'll need for your wedding based on guest count and event duration.",
    href: '/calculators/wedding-alcohol-calculator',
    icon: 'cube' as const,
    color: 'purple' as const,
    status: 'live' as const,
  },
  {
    title: 'Hourly to Annual Salary Converter',
    description: 'Convert your hourly rate to an annual salary with tax adjustments and see your real take-home pay.',
    href: '/calculators/hourly-to-salary-calculator',
    icon: 'calculator' as const,
    color: 'green' as const,
    status: 'live' as const,
  },
  {
    title: 'Savings Goal Calculator',
    description: 'Calculate monthly contributions needed to reach your savings goal, adjusted for inflation and interest.',
    href: '/calculators/savings-goal-calculator',
    icon: 'chart' as const,
    color: 'yellow' as const,
    status: 'live' as const,
  },
  {
    title: 'Side Hustle Profitability Calculator',
    description: 'Determine if your side hustle is truly profitable by calculating your effective hourly rate and net profit.',
    href: '/calculators/side-hustle-profitability-calculator',
    icon: 'trending' as const,
    color: 'red' as const,
    status: 'live' as const,
  },
];

// Category data
const categories = [
  {
    name: 'Finance',
    description: 'Income, rates, savings',
    color: 'blue',
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />',
  },
  {
    name: 'Events',
    description: 'Wedding, party planning',
    color: 'purple',
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z" />',
  },
  {
    name: 'Business',
    description: 'Freelance, side hustles',
    color: 'green',
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />',
  },
  {
    name: 'Savings',
    description: 'Goals, investments',
    color: 'yellow',
    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />',
  },
];

const colorClasses: Record<string, { bg: string; text: string; bgLight: string }> = {
  blue: { bg: 'bg-blue-100', text: 'text-blue-600', bgLight: 'bg-blue-50' },
  purple: { bg: 'bg-purple-100', text: 'text-purple-600', bgLight: 'bg-purple-50' },
  green: { bg: 'bg-green-100', text: 'text-green-600', bgLight: 'bg-green-50' },
  yellow: { bg: 'bg-yellow-100', text: 'text-yellow-600', bgLight: 'bg-yellow-50' },
};
---

<BaseLayout title={title} description={description} keywords={keywords}>
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <header class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Free Online Calculators
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Simple, accurate calculators for everyday math problems.
        No sign-ups, no complexity - just quick answers.
      </p>
    </header>

    <!-- Calculators Grid -->
    <section class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {calculators.map((calc) => (
          <CalculatorCard
            title={calc.title}
            description={calc.description}
            href={calc.href}
            icon={calc.icon}
            color={calc.color}
            status={calc.status}
          />
        ))}
      </div>
    </section>

    <!-- Categories Section -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">
        Calculator Categories
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {categories.map((cat) => {
          const colors = colorClasses[cat.color];
          return (
            <div class={`${colors.bgLight} rounded-xl p-6 text-center`}>
              <div class={`w-12 h-12 ${colors.bg} rounded-full flex items-center justify-center mx-auto mb-3`}>
                <svg class={`w-6 h-6 ${colors.text}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <Fragment set:html={cat.icon} />
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900">{cat.name}</h3>
              <p class="text-sm text-gray-600 mt-1">{cat.description}</p>
            </div>
          );
        })}
      </div>
    </section>

    <!-- Why Use Section -->
    <section class="bg-white rounded-2xl shadow-sm p-8 md:p-12 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">
        Why Use Our Calculators?
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Instant Results</h3>
          <p class="text-gray-600">
            Results update in real-time as you type. No waiting, no submit buttons.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Accurate Math</h3>
          <p class="text-gray-600">
            Reliable calculations you can trust for important decisions.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">100% Private</h3>
          <p class="text-gray-600">
            All calculations happen in your browser. We never see your data.
          </p>
        </div>
      </div>
    </section>

    <!-- Back to Home -->
    <div class="text-center">
      <a
        href="/"
        class="inline-flex items-center gap-2 text-gray-600 hover:text-blue-600 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Home
      </a>
    </div>
  </div>
</BaseLayout>
