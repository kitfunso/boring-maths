---
/**
 * Calculators Index Page
 *
 * Lists all available calculators with descriptions and links.
 */

import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Free Online Calculators | Boring Math Calculators';
const description = 'Browse our collection of free online calculators for everyday math problems. Calculate freelance rates, wedding costs, savings goals, and more.';
const keywords = 'online calculator, free calculator, math calculator, financial calculator';

// Calculator data
const calculators = [
  {
    title: 'Freelance Day Rate Calculator',
    description: 'Calculate your ideal freelance day rate compared to a salaried position. Includes tax adjustments, benefits analysis, and real take-home pay comparison.',
    href: '/calculators/freelance-day-rate-calculator',
    icon: 'dollar',
    color: 'blue',
    status: 'live'
  },
  {
    title: 'Wedding Alcohol Estimator',
    description: 'Estimate how much beer, wine, and liquor you\'ll need for your wedding based on guest count and event duration.',
    href: '/calculators/wedding-alcohol-calculator',
    icon: 'cube',
    color: 'purple',
    status: 'coming-soon'
  },
  {
    title: 'Hourly to Annual Salary Converter',
    description: 'Convert your hourly rate to an annual salary with tax adjustments and see your real take-home pay.',
    href: '/calculators/hourly-to-salary-calculator',
    icon: 'calculator',
    color: 'green',
    status: 'coming-soon'
  },
  {
    title: 'Savings Goal Calculator',
    description: 'Calculate monthly contributions needed to reach your savings goal, adjusted for inflation and interest.',
    href: '/calculators/savings-goal-calculator',
    icon: 'chart',
    color: 'yellow',
    status: 'coming-soon'
  },
  {
    title: 'Side Hustle Profitability Calculator',
    description: 'Determine if your side hustle is truly profitable by calculating your effective hourly rate and net profit.',
    href: '/calculators/side-hustle-profitability-calculator',
    icon: 'trending',
    color: 'red',
    status: 'coming-soon'
  }
];

// Icon map
const icons: Record<string, string> = {
  dollar: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />',
  cube: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />',
  calculator: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />',
  chart: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />',
  trending: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />'
};

// Color map
const colors: Record<string, { bg: string; bgHover: string; text: string }> = {
  blue: { bg: 'bg-blue-100', bgHover: 'group-hover:bg-blue-200', text: 'text-blue-600' },
  purple: { bg: 'bg-purple-100', bgHover: 'group-hover:bg-purple-200', text: 'text-purple-600' },
  green: { bg: 'bg-green-100', bgHover: 'group-hover:bg-green-200', text: 'text-green-600' },
  yellow: { bg: 'bg-yellow-100', bgHover: 'group-hover:bg-yellow-200', text: 'text-yellow-600' },
  red: { bg: 'bg-red-100', bgHover: 'group-hover:bg-red-200', text: 'text-red-600' }
};
---

<BaseLayout title={title} description={description} keywords={keywords}>
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <header class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Free Online Calculators
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Simple, accurate calculators for everyday math problems.
        No sign-ups, no complexity - just quick answers.
      </p>
    </header>

    <!-- Calculators Grid -->
    <section class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {calculators.map((calc) => {
          const colorClasses = colors[calc.color];
          const isLive = calc.status === 'live';

          return (
            <a
              href={isLive ? calc.href : undefined}
              class={`group block bg-white rounded-xl border border-gray-200 p-6 transition-all ${
                isLive
                  ? 'hover:border-blue-300 hover:shadow-lg cursor-pointer'
                  : 'cursor-default opacity-80'
              }`}
            >
              <div class="flex items-start gap-4">
                <div class={`w-12 h-12 ${colorClasses.bg} ${isLive ? colorClasses.bgHover : ''} rounded-lg flex items-center justify-center flex-shrink-0 transition-colors`}>
                  <svg class={`w-6 h-6 ${colorClasses.text}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <Fragment set:html={icons[calc.icon]} />
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-1">
                    <h2 class={`font-semibold text-gray-900 ${isLive ? 'group-hover:text-blue-600' : ''} transition-colors`}>
                      {calc.title}
                    </h2>
                    {!isLive && (
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-600">
                        Coming Soon
                      </span>
                    )}
                  </div>
                  <p class="text-gray-600 text-sm">
                    {calc.description}
                  </p>
                </div>
              </div>
              {isLive && (
                <div class="mt-4 pt-4 border-t border-gray-100">
                  <span class="text-blue-600 text-sm font-medium group-hover:text-blue-700 transition-colors inline-flex items-center gap-1">
                    Use Calculator
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                  </span>
                </div>
              )}
            </a>
          );
        })}
      </div>
    </section>

    <!-- Categories Section -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">
        Calculator Categories
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="bg-blue-50 rounded-xl p-6 text-center">
          <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900">Finance</h3>
          <p class="text-sm text-gray-600 mt-1">Income, rates, savings</p>
        </div>

        <div class="bg-purple-50 rounded-xl p-6 text-center">
          <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900">Events</h3>
          <p class="text-sm text-gray-600 mt-1">Wedding, party planning</p>
        </div>

        <div class="bg-green-50 rounded-xl p-6 text-center">
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900">Business</h3>
          <p class="text-sm text-gray-600 mt-1">Freelance, side hustles</p>
        </div>

        <div class="bg-yellow-50 rounded-xl p-6 text-center">
          <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900">Savings</h3>
          <p class="text-sm text-gray-600 mt-1">Goals, investments</p>
        </div>
      </div>
    </section>

    <!-- Why Use Section -->
    <section class="bg-white rounded-2xl shadow-sm p-8 md:p-12 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">
        Why Use Our Calculators?
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Instant Results</h3>
          <p class="text-gray-600">
            Results update in real-time as you type. No waiting, no submit buttons.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Accurate Math</h3>
          <p class="text-gray-600">
            Reliable calculations you can trust for important decisions.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">100% Private</h3>
          <p class="text-gray-600">
            All calculations happen in your browser. We never see your data.
          </p>
        </div>
      </div>
    </section>

    <!-- Back to Home -->
    <div class="text-center">
      <a
        href="/"
        class="inline-flex items-center gap-2 text-gray-600 hover:text-blue-600 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Home
      </a>
    </div>
  </div>
</BaseLayout>
