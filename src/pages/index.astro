---
import BaseLayout from '../layouts/BaseLayout.astro';
import CalculatorCard from '../components/calculators/shared/CalculatorCard.astro';

const title = 'Boring Math Calculators | Free Online Calculators';
const description = 'Free online calculators for everyday math problems. Calculate freelance rates, wedding costs, savings goals, and more. Simple, accurate, and easy to use.';

// Calculator data - centralized for easy management
const calculators = [
  {
    title: 'Freelance Day Rate Calculator',
    description: 'Calculate your ideal freelance day rate compared to a salaried position, including tax adjustments and benefits.',
    href: '/calculators/freelance-day-rate-calculator',
    icon: 'dollar' as const,
    color: 'blue' as const,
    status: 'live' as const,
  },
  {
    title: 'Wedding Alcohol Estimator',
    description: "Estimate how much beer, wine, and liquor you'll need for your wedding based on guest count and event duration.",
    href: '/calculators/wedding-alcohol-calculator',
    icon: 'cube' as const,
    color: 'purple' as const,
    status: 'live' as const,
  },
  {
    title: 'Hourly to Annual Salary',
    description: 'Convert your hourly rate to an annual salary with tax adjustments and see your real take-home pay.',
    href: '/calculators/hourly-to-salary-calculator',
    icon: 'calculator' as const,
    color: 'green' as const,
    status: 'live' as const,
  },
  {
    title: 'Savings Goal Calculator',
    description: 'Calculate monthly contributions needed to reach your savings goal, adjusted for inflation and interest.',
    href: '/calculators/savings-goal-calculator',
    icon: 'chart' as const,
    color: 'yellow' as const,
    status: 'live' as const,
  },
  {
    title: 'Side Hustle Profitability',
    description: 'Determine if your side hustle is truly profitable by calculating your effective hourly rate and net profit.',
    href: '/calculators/side-hustle-profitability-calculator',
    icon: 'trending' as const,
    color: 'red' as const,
    status: 'live' as const,
  },
];
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="text-center py-12">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
      Boring Math, Made Easy
    </h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
      Free online calculators for everyday math problems. No ads, no tracking, just simple calculations.
    </p>
  </section>

  <!-- Calculators Preview Section -->
  <section class="py-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
      Popular Calculators
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {calculators.map((calc) => (
        <CalculatorCard
          title={calc.title}
          description={calc.description}
          href={calc.href}
          icon={calc.icon}
          color={calc.color}
          status={calc.status}
        />
      ))}

      <!-- More Coming Soon Placeholder -->
      <div class="bg-gradient-to-br from-gray-100 to-gray-200 rounded-xl border border-gray-200 p-6 flex items-center justify-center">
        <div class="text-center">
          <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          <h3 class="text-xl font-semibold text-gray-700 mb-2">More Calculators</h3>
          <p class="text-gray-600">
            We're adding new calculators regularly. Check back soon!
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 mt-16 bg-white rounded-lg shadow-sm">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Why Use Boring Math?</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Simple, accurate calculators for real-world problems
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 px-8">
      <div class="text-center">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Fast & Simple</h3>
        <p class="text-gray-600">
          No sign-ups, no complexity. Just enter your numbers and get instant results.
        </p>
      </div>

      <div class="text-center">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Accurate Results</h3>
        <p class="text-gray-600">
          Reliable calculations you can trust for important financial decisions.
        </p>
      </div>

      <div class="text-center">
        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Privacy First</h3>
        <p class="text-gray-600">
          Your data stays in your browser. We don't track, store, or sell your information.
        </p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="text-center py-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-4">
      Ready to make boring math easy?
    </h2>
    <p class="text-xl text-gray-600 mb-8">
      Choose a calculator above and start calculating.
    </p>
  </section>
</BaseLayout>
